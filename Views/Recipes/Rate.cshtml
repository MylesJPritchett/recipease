@model Recipease.Models.Recipe

@{
    ViewData["Title"] = "Rate";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateAdded)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateAdded)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cuisine)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cuisine)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd> 
        </dl>
        <span style ="display: inline;">

            <form asp-action="Good">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Good" class="btn btn-primary" />
            </form>
            <form asp-action="Rate">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Skip" class="btn" />
            </form>
            <form asp-action="Bad">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Bad" class="btn btn-danger" />
            </form>
           
            
       </span>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
